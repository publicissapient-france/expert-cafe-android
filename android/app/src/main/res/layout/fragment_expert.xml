<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:card_view="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="@dimen/radius"
        card_view:cardElevation="@dimen/elevation">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin">

                <ImageView
                    android:id="@+id/picImageView"
                    android:layout_width="200dp"
                    android:layout_height="275dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/scivetta"
                    android:layout_marginLeft="3dp"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:id="@+id/descTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/picImageView"
                    android:ellipsize="marquee"
                    android:maxHeight="275dp"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="3dp"
                    tools:text="Explanation about the speaker."/>

                <TextView
                    android:id="@+id/availableTimeTextView"
                    style="@style/AppTheme.TitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/picImageView"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="3dp"
                    android:text="@string/title_available_time"/>

                <LinearLayout
                    android:id="@+id/timeTenGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/availableTimeTextView"
                    android:layout_marginTop="@dimen/margin"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/ten0Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/ten0"/>

                    <Button
                        android:id="@+id/ten1Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/ten1"/>

                    <Button
                        android:id="@+id/ten2Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/ten2"/>

                    <Button
                        android:id="@+id/ten3Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/ten3"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/timeElevenGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/timeTenGroup"
                    android:layout_marginTop="@dimen/margin"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/eleven0Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/eleven0"/>

                    <Button
                        android:id="@+id/eleven1Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/eleven1"/>

                    <Button
                        android:id="@+id/eleven2Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/eleven2"/>

                    <Button
                        android:id="@+id/eleven3Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/eleven3"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/timeTwelveGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/timeElevenGroup"
                    android:layout_marginTop="@dimen/margin"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/twelve0Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/twelve0"/>

                    <Button
                        android:id="@+id/twelve1Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/twelve1"/>

                    <Button
                        android:id="@+id/twelve2Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/twelve2"/>

                    <Button
                        android:id="@+id/twelve3Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/twelve3"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/timeOneGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/timeTwelveGroup"
                    android:layout_marginTop="@dimen/margin"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/one0Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/one0"/>

                    <Button
                        android:id="@+id/one1Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/one1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/timeTwoGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/timeOneGroup"
                    android:layout_marginTop="@dimen/margin"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/two0Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/two0"/>

                    <Button
                        android:id="@+id/two1Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/two1"/>

                    <Button
                        android:id="@+id/two2Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/two2"/>

                    <Button
                        android:id="@+id/two3Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/two3"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/timeThreeGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/timeTwoGroup"
                    android:layout_marginTop="@dimen/margin"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/three0Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/three0"/>

                    <Button
                        android:id="@+id/three1Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/three1"/>

                    <Button
                        android:id="@+id/three2Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/three2"/>

                    <Button
                        android:id="@+id/three3Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/three3"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/timeFourGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/timeThreeGroup"
                    android:layout_marginTop="@dimen/margin"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/four0Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/four0"/>

                    <Button
                        android:id="@+id/four1Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/four1"/>

                    <Button
                        android:id="@+id/four2Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/four2"/>

                    <Button
                        android:id="@+id/four3Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/four3"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/timeFiveGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/timeFourGroup"
                    android:layout_marginTop="@dimen/margin"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/five0Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/five0"/>

                    <Button
                        android:id="@+id/five1Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/five1"/>

                    <Button
                        android:id="@+id/five2Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/five2"/>

                    <Button
                        android:id="@+id/five3Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/five3"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/timeSixGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/timeFiveGroup"
                    android:layout_marginTop="@dimen/margin"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/six0Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/six0"/>

                    <Button
                        android:id="@+id/six1Button"
                        style="@style/AppTheme.TimeButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/six1"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/subscriptionTextView"
                    style="@style/AppTheme.TitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/timeSixGroup"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="3dp"
                    android:text="@string/title_subscription"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/nameTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subscriptionTextView"
                    android:layout_marginTop="@dimen/margin">

                    <EditText
                        android:id="@+id/nameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/name"
                        android:inputType="textCapWords"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/emailTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nameTextInputLayout"
                    android:layout_marginTop="@dimen/margin">

                    <EditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/subjectTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/emailTextInputLayout"
                    android:layout_marginTop="@dimen/margin">

                    <EditText
                        android:id="@+id/subjectEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|left"
                        android:hint="@string/subject"
                        android:inputType="textMultiLine|textAutoComplete|textAutoCorrect|textCapSentences"
                        android:lines="8"
                        android:maxLines="10"
                        android:minLines="6"/>
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/submit"
                    style="@style/AppTheme.Button"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/subjectTextInputLayout"
                    android:layout_marginTop="20dp"
                    android:text="@string/button_subscribe"/>
            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</FrameLayout>